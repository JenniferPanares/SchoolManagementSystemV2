@model IEnumerable<SchoolManagementSystem.Models.Course>

@{
    ViewData["Title"] = "Courses Index";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CourseTitle)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Credits)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CourseTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Credits)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Enroll in a Course</h2>
<form asp-action="Enroll" method="post">
    <div class="form-group">
        <label for="CourseId">Course</label>
        <select name="CourseId" class="form-control">
            @foreach (var course in Model)
            {
                <option value="@course.CourseId">@course.CourseTitle</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="StudentId">Student ID</label>
        <input type="number" name="StudentId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Enroll</button>
</form>
